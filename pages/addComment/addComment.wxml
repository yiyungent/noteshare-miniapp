<!--pages/addComment/addComment.wxml-->
<mp-form-page>
    <mp-form>
        <view class="weui-cells__title">输入评论</view>
          <view class="weui-cells weui-cells_after-title">
              <view class="weui-cell">
                  <view class="weui-cell__bd">
                      <textarea model:value="{{commentText}}" class="weui-textarea" placeholder="请输入评论" style="height: 3.3em" />
                      <view class="weui-textarea-counter">0/200</view>
                  </view>
              </view>
          </view>
      </mp-form>

    <view class="weui-btn-area">
        <button class="weui-btn btn-primary" type="primary" bindtap="bindSubmitCommentTap">发布评论</button>
    </view>
</mp-form-page>
